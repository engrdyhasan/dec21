FloatLayout:
    canvas:
        Color:
            rgb: 1,1,0
        Rectangle:
            # pos:100,50
            source: 'z.jpg'
            size: self.size
    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {"top": 1}
        height: 44
        Image:
            size_hint: None, None
            size: 33,33
            source: "andalus.png"
            allow_stretch: 1
        Label:
            height: 22
            text_size: self.width, None
            color: 1 , 1 , 0 , 1
            text:'EngRdy'
<Picture>:
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None
    pos: 200,200
    # pos_hint: {'center_x': .5, 'center_y': .5}
    Image:
        id: image
        source: root.source
        size: 200,200/self.image_ratio
        allow_stretch:1
        pos_hint: {"center_x": 0.0,"center_y": 0.0}
        # add shadow background
        canvas.before:
            Color:
                rgba: 1,1,1,1
            BorderImage:
                source: '0.png'
                # border: (11,11,11,11)
                border: (5,5,5,5)
                # size:(self.width+22, self.height+22)
                size:(self.width+10, self.height+10)
                # pos: (-11,-11)
                pos: (-5,-5)

